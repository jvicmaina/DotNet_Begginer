@{
    ViewData["Title"] = "Create account";
}
<div class="container h-100 d-flex justify-content-center align-items-center">
    <form method="post" class="w-50">
        <h2 class="pb-3 text-center">New Account</h2>
        <div class="mb-3">
            <label for="" class="form-label">First Name</label>
            <input type="text" name="" class="form-control" placeholder="Enter first name"/>
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Last Name</label>
            <input type="text" name="" class="form-control" placeholder="Enter last name"/>
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Email</label>
            <input type="email" name="" class="form-control" placeholder="Enter a valid email address"/>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Password</label>
            <input type="password" name="" class="form-control" placeholder="Create your passsword"/>
        </div>
        <button type="submit" class="btn btn-dark px-5">Register</button>
    </form>
</div>